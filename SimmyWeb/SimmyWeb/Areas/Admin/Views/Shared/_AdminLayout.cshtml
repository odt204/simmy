        /* Content area */
        .content {
            margin-left: 250px;
            padding: 30px;
            background-color: #f4f4f4;
            transition: margin-left 0.3s;
        }

        /* Header with real-time clock */
        .content-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 50px;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .hello-user {
            font-size: 1.75rem;
            font-weight: bold;
            color: #1f1f1f;
        }

        /* Real-time clock display */
        .real-time {
            display: flex;
            flex-direction: column; /* Stack clock and date vertically */
            align-items: center; /* Center items horizontally */
            background-color: #ffffff; /* White background */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
            width: 300px; /* Fixed width */
            padding: 20px; /* Spacing inside the box */
            margin-right: 20px; /* Space between clock and user icon */
            font-size: 24px;
            font-weight: bold;
        }

        /* Clock styling */
        .clock {
            font-size: 46px; /* Adjusted font size for better readability */
            font-weight: bold; /* Make clock bold */
            color: #333; /* Dark color for text */
            margin: 0; /* Remove default margin */
            text-align: center; /* Center text */
        }

        /* Date styling */
        .date {
            font-size: 46px; /* Adjusted font size */
            color: #888888; /* Lighter color for the date */
            margin-top: 5px; /* Space above date */
            text-align: center; /* Center text */
        }
        /* User icon and dropdown */
        .icon-user {
            display: flex;
            width: 200px;
            align-items: center;
            background-color: #ffffff;
            padding: 10px 20px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        }

            .icon-user img {
                border-radius: 50%;
                width: 50px;
                margin-right: 10px;
            }

        .icon-user-fullname {
            font-weight: bold;
            color: #1f1f1f;
        }

        .icon-user-dropdown {
            position: relative;
        }

            .icon-user-dropdown .box-triangle {
                position: absolute;
                top: 100%;
                left: 50%;
                transform: translateX(-50%);
                margin-top: 5px;
            }

            .icon-user-dropdown .user-logout {
                position: absolute;
                top: 120%;
                left: 50%;
                transform: translateX(-50%);
                background-color: #ffffff;
                padding: 10px;
                border: 1px solid #ccc;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
                display: none;
            }

        .icon-user:hover .user-logout {
            display: block;
        }

        /* Dropdown Item Styles */
        .user-logout a {
            display: block;
            padding: 10px;
            color: #34495e;
            text-decoration: none;
            transition: background 0.3s, color 0.3s;
        }

            .user-logout a:hover {
                background: #3498db;
                color: #ffffff;
            }

        .sub-menu {
            list-style: none;
            padding: 0;
            margin: 0;
            position: absolute;
            background-color: white;
            border: 1px solid #ccc;
            z-index: 1000;
        }

            .sub-menu li {
                padding: 8px 12px;
            }

                .sub-menu li a {
                    color: black;
                    text-decoration: none;
                }

                    .sub-menu li a:hover {
                        background-color: #f0f0f0;
                    }

        }

        .dropdown-toggle {
            display: flex;
            align-items: center; /* Căn giữa văn bản và biểu tượng */
            justify-content: space-between;
            text-decoration: none;
            width: 100%;
            font-size: 16px;
            font-weight: 500;
        }

        .dropdown-arrow {
            border: solid black;
            border-width: 0 2px 2px 0;
            display: inline-block;
            padding: 5px;
            transform: rotate(45deg); /* Tạo hình mũi tên */
            margin-left: 10px; /* Giãn cách giữa text và mũi tên */
        }
