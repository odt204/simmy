    <script>
        function updateTime() {
            var now = new Date();
            var day = String(now.getDate()).padStart(2, '0');
            var month = String(now.getMonth() + 1).padStart(2, '0'); // Tháng bắt đầu từ 0 nên cần cộng thêm 1
            var year = now.getFullYear();

            var hours = String(now.getHours()).padStart(2, '0');
            var minutes = String(now.getMinutes()).padStart(2, '0');
            var seconds = String(now.getSeconds()).padStart(2, '0');

            var dateTime = day + '/' + month + '/' + year + ' ' + hours + ':' + minutes + ':' + seconds;

            document.getElementById("currentTime").innerHTML = dateTime;
        }

        setInterval(updateTime, 1000); // Cập nhật mỗi giây
