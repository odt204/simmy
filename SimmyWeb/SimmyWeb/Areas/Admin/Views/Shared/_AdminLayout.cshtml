        /* Ensure the sidebar and logo stay fixed across all pages */
        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 300px;
            background-color: #ffffff;
            color: #ffffff;
            z-index: 1000;
            transition: width 0.3s;
            overflow: hidden;
        }

            #sidebar .logo-header {
                padding: 30px 20px;
                text-align: center;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

                #sidebar .logo-header img {
                    width: 180px;
                    height: auto;
                    object-fit: contain;
                }

            #sidebar .logo-title {
                font-size: 1.2rem;
                color: rgba(0, 0, 0, 0.2);
                margin-top: 10px;
                display: block;
                font-weight: bold;
            }

            #sidebar ul.components {
                padding: 20px 10px;
            }

                /* Sidebar links */
